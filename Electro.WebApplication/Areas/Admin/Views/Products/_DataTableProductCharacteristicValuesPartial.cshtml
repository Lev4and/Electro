@model ProductCharacteristicValuesViewModel
<table id="table-product-characteristic-values" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>Характеристика</th>
            <th>Значение</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var productCharacteristicValue in Model.ProductCharacteristicValues)
        {
            <tr>
                <td>@productCharacteristicValue.CharacteristicCategoryValue.CharacteristicCategory.Characteristic.Name</td>
                <td>@productCharacteristicValue.CharacteristicCategoryValue.Value</td>
                <td>
                    <div class="btn-group pull-right">
                        <a data-action="edit" data-product-characteristic-value-id="@productCharacteristicValue.Id" onclick="onClickToActionForProductCharacteristicValue(this);">
                            <button class="btn btn-sm btn-default">
                                <span class="fa fa-edit">

                                </span>
                            </button>
                        </a>
                        <a data-action="delete" data-product-characteristic-value-id="@productCharacteristicValue.Id" onclick="onClickToActionForProductCharacteristicValue(this);">
                            <button class="btn btn-sm btn-default">
                                <span class="fa fa-trash">

                                </span>
                            </button>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th>Характеристика</th>
            <th>Значение</th>
            <th>Действия</th>
        </tr>
    </tfoot>
</table>