@model SectionCharacteristicViewModel
@section StylePage
{
    <link rel="stylesheet" type="text/css" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" asp-append-version="true" />
    <link rel="stylesheet" type="text/css" href="~/plugins/select2/css/select2-bootstrap4.css" asp-append-version="true" />
    <link rel="stylesheet" type="text/css" href="~/plugins/select2/css/select2.min.css" asp-append-version="true" />
    <link rel="stylesheet" type="text/css" href="~/css/custom.css" asp-append-version="true" />
}
@{
    ViewData["Title"] = "Сохранение раздела характеристики";
}
<div class="page-wrapper">
    <div class="page-content-wrapper">
        <div class="page-content">
            <div class="page-breadcrumb d-none d-md-flex align-items-center mb-3">
                <div class="breadcrumb-title pr-3">База данных</div>
                <div class="pl-3">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0 p-0">
                            <li class="breadcrumb-item">
                                <a href="javascript:;"><i class='bx bx-home-alt'></i></a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">Разделы характеристик</li>
                        </ol>
                    </nav>
                </div>
            </div>
            <div class="card radius-15">
                <div class="card-body">
                    <div class="card-title">
                        <h4 class="mb-0">Форма</h4>
                    </div>
                    <hr />
                    <div class="form-body">
                        <form method="post" action="/Admin/SectionsCharacteristics/Save">
                            <input type="hidden" asp-for="SectionCharacteristic.Id" />
                            @if (Model.UsedCategories != null)
                            {
                                @for (int i = 0; i < Model.UsedCategories.Count; i++)
                                {
                                    <input type="hidden" asp-for="@Model.UsedCategories[i].Id" />
                                    <input type="hidden" asp-for="@Model.UsedCategories[i].Name" />
                                }
                            }
                            @if (Model.NotUsedCategoriesForSectionCharacteristic != null)
                            {
                                @for (int i = 0; i < Model.NotUsedCategoriesForSectionCharacteristic.Count; i++)
                                {
                                    <input type="hidden" asp-for="@Model.NotUsedCategoriesForSectionCharacteristic[i].Id" />
                                    <input type="hidden" asp-for="@Model.NotUsedCategoriesForSectionCharacteristic[i].Name" />
                                }
                            }
                            @if (Model.SectionCharacteristic.Categories != null)
                            {
                                @for (int i = 0; i < Model.SectionCharacteristic.Categories.Count; i++)
                                {
                                    <input type="hidden" name="SectionCharacteristic.Categories[@i].Id" value="@Model.SectionCharacteristic.Categories.ElementAt(i).Id" />
                                    <input type="hidden" name="SectionCharacteristic.Categories[@i].SectionId" value="@Model.SectionCharacteristic.Categories.ElementAt(i).SectionId" />
                                    <input type="hidden" name="SectionCharacteristic.Categories[@i].CategoryId" value="@Model.SectionCharacteristic.Categories.ElementAt(i).CategoryId" />
                                }
                            }
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Наименование</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" asp-for="SectionCharacteristic.Name" required>
                                    <span class="invalid-feedback" style="display: block;" asp-validation-for="SectionCharacteristic.Name"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Категории</label>
                                <div class="col-sm-10">
                                    <select class="multiple-select w-100" data-placeholder="Выбирайте что угодно" asp-for="@Model.SelectedCategories" multiple="multiple">
                                        @if (Model.UsedCategories != null)
                                        {
                                            @foreach (var category in Model.UsedCategories)
                                            {
                                                <option value="@category.Id" selected="selected">@category.Name</option>
                                            }
                                        }
                                        @if (Model.NotUsedCategoriesForSectionCharacteristic != null)
                                        {
                                            @foreach (var category in Model.NotUsedCategoriesForSectionCharacteristic)
                                            {
                                                <option value="@category.Id">@category.Name</option>
                                            }
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label"></label>
                                <div class="col-sm-10">
                                    <input type="submit" class="btn btn-light px-4" value="Сохранить" />
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section ScriptPage
{
    <script src="~/plugins/select2/js/select2.min.js" asp-append-version="true"></script>
    <script>
        $('.multiple-select').select2({
            theme: 'bootstrap4',
            placeholder: $(this).data('placeholder'),
            allowClear: Boolean($(this).data('allow-clear')),
        });
    </script>
}