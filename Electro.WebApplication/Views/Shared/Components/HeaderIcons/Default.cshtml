@model HeaderIconsViewModel
<!-- Header Icons -->
<div class="col col-xl-auto text-right text-xl-left pl-0 pl-xl-3 position-static">
    <div class="d-inline-flex">
        <ul class="d-flex list-unstyled mb-0 align-items-center">
            <!-- Search -->
            <li class="col d-xl-none px-2 px-sm-3 position-static">
                <a id="searchClassicInvoker" class="font-size-22 text-gray-90 text-lh-1 btn-text-secondary" href="javascript:;" role="button"
                   data-toggle="tooltip"
                   data-placement="top"
                   title="Поиск"
                   aria-controls="searchClassic"
                   aria-haspopup="true"
                   aria-expanded="false"
                   data-unfold-target="#searchClassic"
                   data-unfold-type="css-animation"
                   data-unfold-duration="300"
                   data-unfold-delay="300"
                   data-unfold-hide-on-scroll="true"
                   data-unfold-animation-in="slideInUp"
                   data-unfold-animation-out="fadeOut">
                    <span class="fas fa-search"></span>
                </a>

                <!-- Input -->
                <div id="searchClassic" class="dropdown-menu dropdown-unfold dropdown-menu-right left-0 mx-2" aria-labelledby="searchClassicInvoker">
                    <form class="js-focus-state input-group px-3" method="get" asp-area="" asp-controller="Search" asp-action="Index">
                        <input class="form-control" type="search" autocomplete="off" placeholder="Поиск товаров" name="searchString">
                        <div class="input-group-append">
                            <button class="btn btn-primary px-3" type="submit"><i class="font-size-18 fas fa-search"></i></button>
                        </div>
                    </form>
                </div>
                <!-- End Input -->
            </li>
            <!-- End Search -->
            <li class="col d-xl-none px-2 px-sm-3">
                <a asp-area="" asp-controller="Account" asp-action="Index" class="text-gray-90" data-toggle="tooltip" data-placement="top" title="Мой аккаунт">
                    <i class="font-size-22 fas fa-user"></i>
                </a>
            </li>
            <li class="col pr-xl-0 px-2 px-sm-3">
                <a href="#" class="text-gray-90 position-relative d-flex" data-toggle="tooltip" data-placement="top" title="История">
                    <i class="font-size-22 fas fa-history" style="color: orange;"></i>
                </a>
            </li>
            <li class="col pr-xl-0 px-2 px-sm-3 d-xl-none">
                <a asp-area="" asp-controller="Compare" asp-action="Index" class="text-gray-90 position-relative d-flex" data-toggle="tooltip" data-placement="top" title="Сравнить">
                    <i class="font-size-22 fas fa-chart-bar" style="color: purple;"></i>
                    <span class="bg-lg-down-black width-22 height-22 bg-primary position-absolute d-flex align-items-center justify-content-center rounded-circle left-12 top-8 font-weight-bold font-size-12">@Model.CountProductsInCompare</span>
                </a>
            </li>
            <li class="col pr-xl-0 px-2 px-sm-3 d-none d-xl-block">
                <div id="compareDropdownHoverInvoker" class="text-gray-90 position-relative d-flex " data-toggle="tooltip" data-placement="top" title="Сравнить"
                     aria-controls="compareDropdownHover"
                     aria-haspopup="true"
                     aria-expanded="false"
                     data-unfold-event="click"
                     data-unfold-target="#compareDropdownHover"
                     data-unfold-type="css-animation"
                     data-unfold-duration="300"
                     data-unfold-delay="300"
                     data-unfold-hide-on-scroll="true"
                     data-unfold-animation-in="slideInUp"
                     data-unfold-animation-out="fadeOut">
                    <i class="font-size-22 fas fa-chart-bar" style="color: purple;"></i>
                    <span class="bg-lg-down-black width-22 height-22 bg-primary position-absolute d-flex align-items-center justify-content-center rounded-circle left-12 top-8 font-weight-bold font-size-12">@Model.CountProductsInCompare</span>
                </div>
                <div id="compareDropdownHover" class="cart-dropdown dropdown-menu dropdown-unfold border-top border-top-primary mt-3 border-width-2 border-left-0 border-right-0 border-bottom-0 left-auto right-0" aria-labelledby="compareDropdownHoverInvoker">
                    @await Html.PartialAsync("_CompareDropdownContentPartial", Model.CompareContent)
                </div>
            </li>
            <li class="col pr-xl-0 px-2 px-sm-3">
                <a asp-area="" asp-controller="Favorites" asp-action="Index" class="text-gray-90 position-relative d-flex" data-toggle="tooltip" data-placement="top" title="Список желаний">
                    <i class="font-size-22 fas fa-heart text-red"></i>
                    <span class="bg-lg-down-black width-22 height-22 bg-primary position-absolute d-flex align-items-center justify-content-center rounded-circle left-12 top-8 font-weight-bold font-size-12">@Model.CountProductsInFavorites</span>
                </a>
            </li>
            <li class="col pr-xl-0 px-2 px-sm-3 d-xl-none">
                <a asp-area="" asp-controller="Cart" asp-action="Index" class="text-gray-90 position-relative d-flex" data-toggle="tooltip" data-placement="top" title="Корзина">
                    <i class="font-size-22 fas fa-shopping-bag" style="color: blue;"></i>
                    <span class="bg-lg-down-black width-22 height-22 bg-primary position-absolute d-flex align-items-center justify-content-center rounded-circle left-12 top-8 font-weight-bold font-size-12">@Model.CountProductsInCart</span>
                </a>
            </li>
            <li class="col pr-xl-0 px-2 px-sm-3 d-none d-xl-block">
                <div id="cartDropdownHoverInvoker" class="text-gray-90 position-relative d-flex " data-toggle="tooltip" data-placement="top" title="Корзина"
                     aria-controls="cartDropdownHover"
                     aria-haspopup="true"
                     aria-expanded="false"
                     data-unfold-event="click"
                     data-unfold-target="#cartDropdownHover"
                     data-unfold-type="css-animation"
                     data-unfold-duration="300"
                     data-unfold-delay="300"
                     data-unfold-hide-on-scroll="true"
                     data-unfold-animation-in="slideInUp"
                     data-unfold-animation-out="fadeOut">
                    <i class="font-size-22 fas fa-shopping-bag" style="color: blue;"></i>
                    <span class="bg-lg-down-black width-22 height-22 bg-primary position-absolute d-flex align-items-center justify-content-center rounded-circle left-12 top-8 font-weight-bold font-size-12">@Model.CountProductsInCart</span>
                </div>
                <div id="cartDropdownHover" class="cart-dropdown dropdown-menu dropdown-unfold border-top border-top-primary mt-3 border-width-2 border-left-0 border-right-0 border-bottom-0 left-auto right-0" aria-labelledby="cartDropdownHoverInvoker">
                    @await Html.PartialAsync("_CartDropdownContentPartial", Model.CartContent)
                </div>
            </li>
        </ul>
    </div>
</div>
<!-- End Header Icons -->