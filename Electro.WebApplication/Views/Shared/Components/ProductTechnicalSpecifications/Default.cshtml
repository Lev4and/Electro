@model Dictionary<string, List<CharacteristicCategoryValue>>
@if (Model != null ? Model.Count > 0 : false)
{
    <div class="table-responsive">
        <table class="table table-hover">
            <tbody>
                @foreach (var keyValue in Model)
                {
                    @if (keyValue.Value != null)
                    {
                        <tr>
                            <th class="px-4 px-xl-5 border-top-0" colspan="2">
                                <h3 class="font-size-18 mt-4 mb-4">@keyValue.Key</h3>
                            </th>
                        </tr>
                        @foreach (var value in keyValue.Value)
                        {
                            <tr>
                                <th class="px-4 px-xl-5 border-top-0">@value.CharacteristicCategory.Characteristic.Name</th>
                                <td class="border-top-0">@value.Value</td>
                            </tr>
                        }
                    }
                }
            </tbody>
        </table>
    </div>
}